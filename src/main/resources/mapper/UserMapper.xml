<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ceep.ccpp.dao.UserMapper" >

  <select id="getUserById" resultType="com.dxfjyygy.dto.UserDTO">
      select * from user where id = #{id}
  </select>


  <select id="getUserList" resultType="com.dxfjyygy.dto.UserDTO">
    select  * from user u where 1 = 1
    <if test=" username != null   and username.trim() != '' " >
      AND u.username = #{username}
    </if>
    <if test=" status != null   and status.trim() != '' " >
      AND u.status = #{status}
    </if>
    <if test=" department != null   and department.trim() != '' " >
      AND u.department = #{department}
    </if>

  </select>

</mapper>